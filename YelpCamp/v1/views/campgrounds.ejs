<% include partials/header %>

<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome to YelpCamp!</h1>
			<p>View our hand picked camp grounds from all over the world</p>
			<p>
				<a class="btn btn-primary btn-default" href="/campgrounds/new">Add a new campground</a>
			</p>
			<button type="button" id="delete-button" class="btn btn-warning btn-default" onclick="deleteCamps();">Delete campground(s)</button>
		</div>
	</header>
	
	<div class="row text-center">
		<% for(var i=0; i < campgrounds.length ; i++) { %>
			<div class="col-md-3 col-sm-6">
				<div class="thumbnail">
					<img src="<%= campgrounds[i].img %>">
					<div class="caption">
						<input type="checkbox" onchange="prepareDelete();" class="checkbox delete-check"> <%= campgrounds[i].name %>
					</div>
				</div>
			</div>
		<% } %>
	</div>
</div>

<% include partials/footer %>